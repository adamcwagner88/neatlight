div.narrative

  position absolute
  overflow-y scroll
  padding 2em 3em
  width $text-width
  left 40px
  z-index 1

  overlay-container()

  p, li
    font-size 18px

  hr
    border-top 1px solid lighten(black, 80%)

  [data-neatline-slug]
    padding 2px 0
    background transparent
    cursor pointer

    &.highlighted
      background darken(white, 15%)

    &.selected
      background darken(white, 25%)
      color $text-color

  .declaration

    h2, h3
      text-align center

    .title
      font-size 36px

    .subtitle
      font-size 20px

      span
        display block
        margin-bottom 8px
        font-size 16px

        &.big
          font-size 34px

    ul
      padding-left 2em

    .divider
      text-align center

    li
      margin-bottom 0.5em

  .signers

    ul.links
      padding 0

      li
        display inline

        &:not(:last-child):after
          content " â€¢"

        a.line
          font-size 12px
          color $link-color
          padding 1px
          cursor pointer

          &:hover
            background darken(white, 15%)

          i
            font-size 10px
