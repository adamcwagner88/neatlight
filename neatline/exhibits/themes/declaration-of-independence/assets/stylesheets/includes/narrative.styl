div.narrative

  position absolute
  overflow-y scroll
  padding 2em 3em
  width $text-width
  left 40px
  z-index 1

  overlay-container()

  p, li
    font-size 18px

  hr
    border-top 1px solid lighten(black, 80%)

  [data-neatline-slug]

    padding 2px 0
    background transparent
    cursor pointer

    &.highlighted
      background darken(white, 15%)

    &.selected
      background lighten(black, 40%)
      color darken(white, 5%)

  .declaration

    h2, h3
      text-align center
      margin 0

    h2.title
      font-size 36px
      padding 10px 0

    h3.subtitle
      font-size 20px

      span
        display block
        font-size 16px
        margin 0
        padding 10px 0

        &.big
          font-size 34px

    ul
      padding-left 2em

    p.divider
      text-align center

    li
      margin-bottom 0.5em

  .signers

    ul.state

      &.confederate

        [data-neatline-slug].selected
          background $confederate

      &.union

        [data-neatline-slug].selected
          background $union
