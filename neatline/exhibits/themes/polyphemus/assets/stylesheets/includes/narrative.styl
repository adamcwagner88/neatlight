div.narrative

  position absolute
  left 30px
  top 0
  padding 1.4em

  background rgba(100, 110, 120, 0.9)
  color white

  white-space nowrap
  font-family Raleway
  font-size 10px
  font-weight 100

  .title
    font-weight 700
    margin-top 0

  .stanza
    margin-top 1em

  [data-neatline-slug]
    padding 0
    background transparent

    &.highlighted, &.selected
      border-bottom 1px solid white
      font-weight bold
