div.narrative

  position absolute
  overflow-y scroll
  padding 2em 3em
  width $text-width
  left 40px
  z-index 1

  overlay-container()

  p, li
    font-size 18px

  hr
    border-top 1px solid lighten(black, 80%)

  [data-neatline-slug]

    padding 2px 0
    background transparent
    cursor pointer

    &.highlighted, &:hover
      background darken(white, 15%)

    &.selected
      background lighten(black, 35%)
      color darken(white, 5%)

  // TEXT
  .declaration

    h2, h3
      text-align center

    .title
      font-size 36px

    .subtitle
      font-size 20px

      span
        display block
        margin-bottom 8px
        font-size 16px

        &.big
          font-size 34px

    ul
      padding-left 2em

    p.divider
      text-align center

    li
      margin-bottom 0.5em

  // SIGNATURES
  .signers

    [data-neatline-slug]
      border-radius 2px
      padding 2px

    ul.state

      &.confederate

        [data-neatline-slug].selected
          background $confederate

      &.union

        [data-neatline-slug].selected
          background $union
