div.narrative

  position absolute
  overflow-y scroll
  padding 2em 3em
  width $text-width
  z-index 1

  overlay-container()

  h2, h3
    text-align center

  .title
    font-size 36px

  .subtitle
    font-size 20px

    span
      display block
      margin-bottom 8px
      font-size 16px

      &.big
        font-size 34px

  .divider
    text-align center

  p, li
    font-size 18px

  ul
    padding-left 2em

    li
      margin-bottom 0.5em
