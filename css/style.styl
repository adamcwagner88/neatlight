// FONTS
// ----------------------------------------------------------------------------

@import url("http://fonts.googleapis.com/css?family=Oswald:400,700,300")
@import url("http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,600")
@import url("http://fonts.googleapis.com/css?family=Roboto+Condensed:300")


// VARIABLES
// ----------------------------------------------------------------------------

$font-body = "Source Sans Pro"
$site-header = "Londrina Shadow"
$font-header = "Oswald"
$color-accent = #006ebb


// GENERIC STYLES
// ----------------------------------------------------------------------------

*
  box-sizing border-box
  -webkit-box-sizing border-box
  -moz-box-sizing border-box

  ::selection
    background $color-accent
    color white

body
  font-family $font-body
  font-size 18px
  font-weight 300
  margin 0

a
  text-decoration none
  color $color-accent

  &:hover
    text-decoration underline

hr
  height 1px
  background black
  font-size 0
  border 0


// EXHIBIT BROWSE
// ----------------------------------------------------------------------------

body.neatline.browse
  font-size 12px
  background darken(white, 1%)

  div.container
    font-size 1.2em
    margin 3em auto
    width 50%

    div.exhibit
      margin 5px 0

    p.title
      font-weight bold


// EXHIBIT SHOW
// ----------------------------------------------------------------------------

body.neatline.show
  background darken(white, 0.5%)
  font-family "Roboto Condensed"

  div.exhibit
    float left
    width 65%

    #neatline, #neatline-map
      height 100%
      width 100%

  div.narrative
    float right
    overflow-y scroll
    padding 2em
    width 500px

    a.back
      display inline-block
      padding 5px 8px
      margin-bottom 1em

      .arrow
        font-size 13px

    h1.title
      margin 0 0 30px 0
      font-family $font-header
      font-weight normal
      font-size 40px

    p
      line-height 27px

      &.first:first-letter
        float left
        margin 0 5px 5px 0
        font-family $font-header
        font-size 100px

  #static-bubble

    div.body
      font-size 17px

    a.close
      font-size 2em
      line-height 0.8em

      &:hover
        color $color-accent
        background none


// COLOPHON
// ----------------------------------------------------------------------------

#colophon
  font-size 0.9em
